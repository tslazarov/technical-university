@model MyCommute.Models.Auth.ProfileViewModel
@if (!ViewContext.ModelState.IsValid)
{
    <div asp-validation-summary="All" class="form-validation"></div>
}

    <form class="form-profile"
          asp-action="Profile"
          asp-route-returnUrl="@Context.Request.Query["returnUrl"]">
        <h2>Please add the following information</h2>
        <label class="sr-only">First name</label>
        <input type="text" class="form-control" placeholder="First name" asp-for="FirstName" />
        <label class="sr-only">Last name</label>
        <input type="text" class="form-control" placeholder="Last name" asp-for="LastName" />
        <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
    </form>